<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portifolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portifolio.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="vh-100">
    <div class="d-flex h-100">
        <aside class="d-flex flex-column bg-dark h-100 position-fixed" style="width: 250px;">
            <a href="#" class="text-center p-1 me-3 my-3 bg-light rounded-end shadow"><img src="~/img/aj.svg"
                    alt="adrian josé" height="40px" srcset=""></a>
            <ul class="nav nav-pills flex-column mb-auto gap-1 pe-2">
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Projetos
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Blog
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Sobre mim
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Linguagens
                    </a>
                </li>
                <li class="nav-item bg-danger">
                    <a href="#" class="nav-link" aria-current="page">
                        <i class="bi bi-speedometer2"></i>
                        Sair
                    </a>
                </li>
            </ul>
        </aside>

        <main role="main" class="w-100 p-3" style="margin-left:250px;">
            @RenderBody()
        </main>

    </div>

    <footer class="footer position-fixed bottom-0">
        <div class="container bg-primary text-white p-2">
            &copy; 2022 - Adrian José
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
