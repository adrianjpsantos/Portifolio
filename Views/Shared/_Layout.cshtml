<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adrian José, @ViewData["Title"].</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-light text-dark d-flex flex-column vh-100 m-0 p-0 mw-100">
    <div class="d-flex flex-grow-1">
        <a class="py-2 px-3 bg-primary rounded-bottom mobile-nav-btn mx-5" data-bs-toggle="offcanvas" href="#nav-off"
            role="button">
            <i class="bi bi-grid-fill text-light"></i>
        </a>

        <aside class="desktop-nav flex-column position-relative" style="width:5.3rem;">
            <ul class="d-flex flex-column nav position-fixed top-50 translate-middle-y rounded" style="z-index:2;">
                <li class="nav-item p-3 rounded-end @(ViewBag.Title == "Inicio" ? "bg-primary" : "")">
                    <a class="nav-link @(ViewBag.Title == "Inicio" ? "text-white" : "")" asp-controller="Home"
                        asp-action="Index" data-bs-placement="right" data-bs-toggle="tooltip" data-bs-title="Inicio">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                </li>
                <li class="nav-item p-3 rounded-end @(ViewBag.Title == "Sobre Mim" ? "bg-primary" : "")">
                    <a class="nav-link @(ViewBag.Title == "Sobre Mim" ? "text-white" : "")" asp-controller="Home"
                        asp-action="About" data-bs-placement="right" data-bs-toggle="tooltip" data-bs-title="Sobre Mim">
                        <i class="bi bi-diamond-fill"></i>
                    </a>
                </li>
                <li class="nav-item p-3 rounded-end @(ViewBag.Title == "Projetos" ? "bg-primary" : "")">
                    <a class="nav-link @(ViewBag.Title == "Projetos" ? "text-white" : "")" asp-controller="Projects" asp-action="Index" data-bs-placement="right"
                        data-bs-toggle="tooltip" data-bs-title="Projetos">
                        <i class="bi bi-file-code-fill"></i>
                    </a>
                </li>
                 <li class="nav-item p-3 rounded-end @(ViewBag.Title == "Projetos" ? "bg-primary" : "")">
                    <a class="nav-link @(ViewBag.Title == "Projetos" ? "text-white" : "")" asp-controller="Admin" asp-action="Index" data-bs-placement="right"
                        data-bs-toggle="tooltip" data-bs-title="Admin">
                        <i class="bi bi-file-code"></i>
                    </a>
                </li>
            </ul>
        </aside>

        <nav class="offcanvas offcanvas-start bg-light" tabindex="-1" id="nav-off">
            <div class="offcanvas-body small">
                <ul class="d-flex flex-column nav position-fixed top-50 translate-middle-y">
                    <li class="nav-item p-3 ">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-2"></i>Inicio
                        </a>
                    </li>
                    <li class="nav-item p-3">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-diamond-fill me-2"></i>Sobre mim
                        </a>
                    </li>
                    <li class="nav-item  p-3">
                        <a class="nav-link " asp-controller="Projects" asp-action="Index">
                            <i class="bi bi-file-code-fill me-2"></i>Projetos
                        </a>
                    </li>
                    <li class="nav-item p-3 ">
                        <a class="nav-link text-danger " data-bs-dismiss="offcanvas" aria-label="Close">
                            <i class="bi bi-x-square-fill me-2 "></i>Fechar Menu
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Modal", required: false)
    <footer class="footer position-fixed bottom-0">
        <div class="container bg-primary text-white p-2 ms-2 rounded-top shadow">
            &copy; 2022 - Adrian José
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
