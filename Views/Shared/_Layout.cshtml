<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portifolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom_bs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portifolio.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class=" bg-light d-flex flex-column vh-100 m-0 p-0">
    <div class="d-flex flex-grow-1">
        <aside class="d-flex flex-column position-relative" style="width:5.3rem ;">
            <ul class="d-flex flex-column nav  position-fixed top-50 translate-middle-y">
                <li class="nav-item p-3">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" data-bs-placement="right"
                        data-bs-toggle="tooltip" data-bs-title="Inicio">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" asp-controller="Home" asp-action="Skills" data-bs-placement="right" data-bs-toggle="tooltip"
                        data-bs-title="Sobre Mim">
                        <i class="bi bi-diamond-fill"></i>
                    </a>
                </li>
                <li class="nav-item p-3 ">
                    <a class="nav-link " asp-controller="Home" asp-action="Projects" data-bs-placement="right" data-bs-toggle="tooltip"
                        data-bs-title="Projetos">
                        <i class="bi bi-file-code-fill"></i>
                    </a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" asp-controller="Blog" asp-action="Index" data-bs-placement="right" data-bs-toggle="tooltip"
                        data-bs-title="Meu Blog">
                        <i class="bi bi-chat-square-quote-fill"></i>
                    </a>
                </li>
            </ul>
        </aside>
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>
    <footer class="footer position-fixed bottom-0">
        <div class="container bg-light p-2">
            &copy; 2022 - Adrian José - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
