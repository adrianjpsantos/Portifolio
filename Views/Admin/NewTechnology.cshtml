@model Technology
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Nova Tecnologia";
}

<div class="p-5">
    <h1>@ViewBag.Title</h1>
    <form asp-action="NewTechnology" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <div class="col-8">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-info text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" asp-for="Icon"></label>
                    <input class="form-control" asp-for="Icon" onchange="changedInputClass()">
                    <span asp-validation-for="Icon" class="text-info text-danger"></span>
                </div>
                <a href="https://devicon.dev/"> Devicon.net</a>
                <div class="col-2 mt-3">
                    <input type="submit" value="Adicionar Tecnologia" class="btn btn-success" />
                </div>
            </div>
            <div class="col-4 d-flex align-items-center justify-content-center">
                <h1 style="font-size: 7rem;" class=""><i id="preview-icon"></i></h1>
            </div>
        </div>
    </form>
</div>

@section Styles{
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
<link rel="stylesheet" href="~/css/skills.css" asp-append-version=true>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>

    function changedInputClass() {
        let inputClass = document.getElementById("Icon");
        let texts = inputClass.value.split(' ');
        let preview = document.getElementById("preview-icon");

        preview.removeAttribute('class');
        
        texts.forEach(value => {
            preview.classList.add(value);
        });
    }

</script>
}